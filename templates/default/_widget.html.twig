{% if selectedCity is not empty %}
    <div class="widget_box">
        <h2 class="widget_city-name">{{ selectedCity.city }}</h2>
        <p>{{ selectedCity.date }}</p>
        <img class="widget_weather-pic" src="{{ asset('/assets/images/' ~ selectedCity.weather ~ '.png') }}">
        <p>min {{ selectedCity.min }}°C / max {{ selectedCity.max }}°C</p>
    </div>
    <p><em>OU</em></p>
{% endif %}
<div class="widget_box">
    <p><a class="widget_link" href="{{ path('homepage') }}">Sélectionnez une ville dans la liste de gauche</a></p>
</div>